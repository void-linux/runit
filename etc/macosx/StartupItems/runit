#!/bin/sh

##
# runit
##

. /etc/rc.common

StartService() {
  ConsoleMessage "Starting runit service supervision"
  /bin/csh -cf '/etc/runit/2 &'
}
StopService() {
  ConsoleMessage "Stopping runit service supervision"
  svwaitdown -k -t34 /service/*
}
RestartService() {
  return 0
}

RunService "$1"
